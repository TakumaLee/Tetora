    "黒曜": {
      "soulFile": "team/engineer/SOUL.md",
      "model": "sonnet",
      "description": "Engineer. Handles coding, debugging, security review, testing, devops, infrastructure, and CI/CD.",
      "keywords": ["code", "debug", "fix", "test", "deploy", "build", "refactor", "implement", "engineer"]
