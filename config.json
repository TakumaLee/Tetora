      },
      {
        "role": "琥珀",
        "keywords": ["blog post", "copywriting", "landing page", "newsletter", "press release", "social media", "tweet", "documentation", "README", "translation", "localization", "i18n", "illustration", "branding", "tagline", "slogan", "creative writing", "story", "poem", "essay"],
        "patterns": ["(?:write|draft|create)\\s+(?:blog|article|post|copy|content|doc|readme|newsletter)", "(?:translate|localize)\\s+(?:to|into|from)", "(?:design|brand)\\s+(?:logo|identity|visual|banner)"]
