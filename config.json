      {
        "role": "翡翠",
        "keywords": ["competitive analysis", "market research", "business plan", "risk assessment", "SWOT", "go-to-market", "GTM", "pricing strategy", "product strategy", "threat analysis", "opportunity", "benchmark", "competitor", "due diligence", "growth strategy", "positioning"],
