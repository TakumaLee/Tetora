      {
        "role": "琉璃",
        "keywords": ["project plan", "roadmap", "sprint plan", "task breakdown", "coordination", "daily standup", "weekly review", "retrospective", "progress report", "team sync"],
        "patterns": ["(?:plan|organize|coordinate|schedule)\\s+(?:project|sprint|team|meeting)", "(?:what|how|why|when|explain|tell me)\\s"]
